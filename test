import requests

def get_vault_value(vault_url, token, secret_path, secret_key):
    """
    Retrieves a value from HashiCorp Vault using HTTP requests.

    Parameters:
        vault_url (str): The URL of the Vault server.
        token (str): The Vault token for authentication.
        secret_path (str): The path to the secret in Vault (e.g., 'secret/data/mysecret').
        secret_key (str): The key within the secret to retrieve.

    Returns:
        str: The value of the secret key or None if not found.
    """
    headers = {
        'X-Vault-Token': token
    }
    
    # Construct the full URL for the secret
    url = f"{vault_url}/v1/{secret_path}"
    
    try:
        response = requests.get(url, headers=headers)
        
        # Check if the request was successful
        if response.status_code == 200:
            # Parse the JSON response
            data = response.json()
            
            # Extract the secret value
            value = data.get('data', {}).get('data', {}).get(secret_key)
            return value
        
        else:
            print(f"Failed to retrieve secret: {response.status_code} - {response.text}")
            return None
    
    except Exception as e:
        print(f"Error: {e}")
        return None

# Example usage:
vault_url = "http://127.0.0.1:8200"  # Replace with your Vault URL
token = "your-vault-token"           # Replace with your Vault token
secret_path = "secret/data/mysecret" # Path to your secret in Vault
secret_key = "mykey"                 # The key you want to retrieve

value = get_vault_value(vault_url, token, secret_path, secret_key)
print(f"Vault Value: {value}")
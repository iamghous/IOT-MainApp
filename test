import yaml

def update_configmap(file_path, key, new_value):
    """
    Updates a value in a Kubernetes ConfigMap YAML file.

    :param file_path: Path to the ConfigMap YAML file
    :param key: The key in the data section to update
    :param new_value: The new value to set
    """
    with open(file_path, 'r') as file:
        configmap = yaml.safe_load(file)

    # Ensure it's a ConfigMap and has the necessary structure
    if configmap.get("kind") == "ConfigMap" and "data" in configmap:
        configmap["data"][key] = new_value
    else:
        raise ValueError("Invalid ConfigMap format")

    with open(file_path, 'w') as file:
        yaml.safe_dump(configmap, file, default_flow_style=False)

    print(f"Updated '{key}' in {file_path}")

# Example usage:
# update_configmap("configmap.yaml", "MY_KEY", "new_value")